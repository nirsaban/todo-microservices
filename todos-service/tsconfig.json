{
  "compilerOptions": {
     "lib": [
        "es5",
        "es6"
     ],
     "target": "es6",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "build",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "esModuleInterop" : true,
     "sourceMap": true,
     "resolveJsonModule": true,
     "types": ["node"],
     "typeRoots": ["./node_modules/@types"],
     
  },
  
  "include": ["env", "./src/**/*.ts",]
}